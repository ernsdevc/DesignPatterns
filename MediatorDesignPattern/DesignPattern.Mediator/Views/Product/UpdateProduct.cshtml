@model DesignPattern.Mediator.MediatorPattern.Results.UpdateProductByIDQueryResult
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">
        <label>Ürün ID</label>
        <input type="text" class="form-control" asp-for="ProductID" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="ProductName" />
        <br />
        <label>Ürün Fiyatı</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <label>Ürün Stok Sayısı</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Ürün Stok Türü</label>
        <input type="text" class="form-control" asp-for="StockType" />
        <br />
        <label>Kategorisi</label>
        <input type="text" class="form-control" asp-for="Category" />
        <br />
        <button class="btn btn-outline-primary">Ürünü Güncelle</button>
    </form>
</div>
