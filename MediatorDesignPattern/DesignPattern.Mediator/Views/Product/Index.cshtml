@using DesignPattern.Mediator.MediatorPattern.Results
@model List<GetAllProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyatı</th>
            <th>Stok Sayısı</th>
            <th>Stok Türü</th>
            <th>Kategorisi</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.StockType</td>
                <td>@item.Category</td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-primary">Güncelle</a></td>
                <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-outline-info">Detaylar</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct" class="btn btn-outline-success">Yeni Ürün Girişi</a>
</div>
