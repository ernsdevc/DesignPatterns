@model DesignPattern.Fascade.DAL.Product
@{
    ViewData["Title"] = "AddNewProduct";
    Layout = "~/Views/Shared/_FascadeLayout.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Ürün Girişi</h1>
<form method="post">
    <label>Ürün Adı</label>
    <input type="text" class="form-control" asp-for="ProductName" />
    <br />
    <label>Ürün Stok Sayısı</label>
    <input type="text" class="form-control" asp-for="Stock" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" class="form-control" asp-for="Price" />
    <br />
    <label>Ürün Kategorisi</label>
    <input type="text" class="form-control" asp-for="Category" />
    <br />
    <button class="btn btn-success">Ürünü Kaydet</button>
</form>

